extends ../layouts/admin-layout

block append head
  title="Подача заявки на администрирование"

block content
  .col-sm-4
  .col-sm-2
    div(style="height:100px")
    form.form-horizontal(method="post")
      .form-group
        legend Подать заявку
      .form-group
        label(for='email') Email адрес
        input#email.form-control(name='email', placeholder='Email адрес', type='text')
        if errors.username
          span.red=errors.username
      .form-group
        label(for='password') Пароль
        input#password.form-control(name='password', placeholder='Пароль', type='password')
        if errors.password
          span.red=errors.password
      .form-group
        label(for='password-repeat') Повторите пароль
        input#password-repeat.form-control(name='passwordRepeated', placeholder='Пароль', type='password')
        if errors.passwordRepeated
          span.red=errors.passwordRepeated
      .form-group
        label(for='first-name') Имя
        input#first-name.form-control(name='firstName', placeholder='Имя', type='text')
        if errors.firstName
          span.red=errors.firstName
      .form-group
        label(for='last-name') Фамилия
        input#last-name.form-control(name='lastName', placeholder='Фамилия', type='text')
        if errors.lastName
          span.red=errors.lastName
      .form-group
        input(type="hidden", name="_csrf", value="#{_csrf}")
      .form-group
        button.btn.btn-default(name='submit') Запросить доступ